<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingBottom="@dimen/kf5_dimen_8dp"
              android:paddingTop="@dimen/kf5_dimen_8dp">


    <TextView
        android:id="@+id/kf5_tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/kf5_dimen_8dp"
        android:background="@drawable/kf5_message_item_with_date_bg"
        android:textColor="@android:color/white"
        android:textSize="@dimen/kf5_text_size_14"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kf5_dimen_16dp">

        <com.kf5.sdk.im.widget.CircleImageView
            android:id="@+id/kf5_message_item_with_image_head_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/kf5_dimen_8dp"
            android:layout_marginStart="@dimen/kf5_dimen_8dp"
            android:contentDescription="@null"/>

        <com.kf5.sdk.im.widget.MaskImage
            android:id="@+id/kf5_message_item_with_image_content_img"
            app:kf5_mi_maskSource="kf5_mi_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/kf5_message_item_with_image_head_img"
            android:layout_marginLeft="@dimen/kf5_dimen_4dp"
            android:layout_marginStart="@dimen/kf5_dimen_4dp"
            android:layout_toEndOf="@+id/kf5_message_item_with_image_head_img"
            android:layout_toRightOf="@+id/kf5_message_item_with_image_head_img"
            android:scaleType="fitXY"/>
    </RelativeLayout>
</LinearLayout>